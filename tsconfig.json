{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@use-cases/*": ["use-cases/*"]
    }
  }
}
